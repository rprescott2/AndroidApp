<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B38D4E"
    tools:context=".Level_1_Activity">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="648dp"
        android:layout_marginStart="24sp"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="24sp"
        android:layout_marginRight="24sp"
        android:layout_marginBottom="70sp"
        android:orientation="vertical"
        android:paddingBottom="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Level1Image"
            android:layout_width="match_parent"
            android:layout_height="405dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="fill_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Text_Level_1"
                android:layout_width="384dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/fieldstext"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"

                android:singleLine="true"
                android:textSize="35dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level1score"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="30sp"
                android:gravity="right"
                android:textSize="30dp" />

            <Space
                android:layout_width="223dp"
                android:layout_height="112dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/Check_Level_1"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="14sp"
                android:layout_marginEnd="32sp"
                android:background="@drawable/buttoncheck"
                android:text="Проверить"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="32sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>